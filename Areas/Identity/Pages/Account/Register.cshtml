@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrieren";
}

<h1>@ViewData["Title"]</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">

        <div class="col-md-4">

            <h4>Neuen Account anlegen.</h4>
            <hr />
            <!-- <div asp-validation-summary="All" class="text-danger"></div> -->
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>

        </div>
        <div class="col-md-4 col-md-offset-2">
            <section>
                <h4>Adresse</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="UserAdress.Street"></label>
                    <input asp-for="UserAdress.Street" class="form-control" />
                    <span asp-validation-for="UserAdress.Street" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserAdress.AdressAditional"></label>
                    <input asp-for="UserAdress.AdressAditional" class="form-control" />
                    <span asp-validation-for="UserAdress.AdressAditional" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserAdress.StreetNumber"></label>
                    <input asp-for="UserAdress.StreetNumber" class="form-control" />
                    <span asp-validation-for="UserAdress.StreetNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserAdress.City"></label>
                    <input asp-for="UserAdress.City" class="form-control" />
                    <span asp-validation-for="UserAdress.City" class="text-danger"></span>
                </div> 
                <div class="form-group">
                    <label asp-for="UserAdress.ZipCode"></label>
                    <input asp-for="UserAdress.ZipCode" class="form-control" />
                    <span asp-validation-for="UserAdress.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserAdress.Country"></label>
                    <input asp-for="UserAdress.Country" class="form-control" />
                    <span asp-validation-for="UserAdress.Country" class="text-danger"></span>
                </div>

                

